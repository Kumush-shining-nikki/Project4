<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/user-page/css/login.css" />
    <title>Log In Page</title>
    <link rel="icon" type="image/png" href="/images/logo.webp">
  </head>

  <body>
    <div id="login-form" class="login-box">
      <h2>Log In</h2>
      <form action="/login" method="POST">
        <div class="user-box">
          <input
            id="phone"
            type="text"
            name="phone"
            placeholder="Phone"
            required
          />
        </div>

        <div class="user-box">
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Password"
            {{!-- pattern="(?=.*\d)(?=.*[a-z])(?=*[A-Z]).{8,}" --}}
            minlength="8"
            maxlength="15"
            required
          />
        </div>

        <button class="submit">
          <span></span>
          <span></span>
          <span></span>
          <span></span>
          Submit
        </button>

        <div class="sign-up">
          <p>Don't have an account?
            <a class="sign-up-link" target="_blank" href="/register"><strong
              >Sign Up</strong></a></p>
        </div>
      </form>
    </div>
  </body>

  <script src="/user-page/js/login.js"></script>
</html>